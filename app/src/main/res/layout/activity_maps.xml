<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false">


    <EditText
        android:id="@+id/search_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_weight="1"
        android:text="@string/search"
        map:layout_constraintEnd_toEndOf="@+id/search_address"
        map:layout_constraintStart_toEndOf="@+id/button_apply_search"
        map:layout_constraintTop_toBottomOf="@+id/search_address" />

    <include
        layout="@layout/map"
        map:layout_constraintBottom_toBottomOf="parent"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintTop_toBottomOf="@+id/search_address"
        map:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/button_apply_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:text="@string/apply_text"
        map:layout_constraintBottom_toBottomOf="@+id/buttonSearch"
        map:layout_constraintEnd_toEndOf="@+id/search_address"
        map:layout_constraintHorizontal_bias="0.25"
        map:layout_constraintStart_toStartOf="@+id/search_address"
        map:layout_constraintTop_toTopOf="@+id/buttonSearch" />

</androidx.constraintlayout.widget.ConstraintLayout>
